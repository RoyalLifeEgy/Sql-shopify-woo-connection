# Application Settings
APP_NAME="SQL E-commerce Connector"
APP_VERSION="1.0.0"
SECRET_KEY="your-secret-key-change-this-in-production"
DEBUG=true

# Database (for storing app configuration)
# SQLite (default - recommended for development/testing)
DATABASE_URL="sqlite:///./ecommerce_connector.db"

# PostgreSQL (uncomment to use PostgreSQL instead)
# DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_connector"

# MySQL (uncomment to use MySQL instead)
# DATABASE_URL="mysql+pymysql://user:password@localhost:3306/ecommerce_connector"

# Redis (optional - for advanced task queue features)
REDIS_URL="redis://localhost:6379/0"

# Security
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption (for storing API keys)
ENCRYPTION_KEY="your-encryption-key-change-this"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
ADMIN_PORT=8001

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
